<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vann.myhome" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.AreaActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.AreaParamActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.SenceActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.SenceParamActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.SystemActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.DeviceParamActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activity.PanelParamActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>
